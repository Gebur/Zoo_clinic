<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E85BDF1">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/resurs_6" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="139dp"
        android:layout_height="137dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="411dp"
        android:layout_height="455dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCard"
            android:layout_width="400dp"
            android:layout_height="57dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:background="#B39BC8"
            android:outlineProvider="none"
            android:padding="10dp"
            android:text="Кардиологи"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonTer"
            android:layout_width="400dp"
            android:layout_height="57dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:background="#B39BC8"
            android:padding="10dp"
            android:text="Терапевты"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCard" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonPar"
            android:layout_width="400dp"
            android:layout_height="57dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:background="#B39BC8"
            android:padding="10dp"
            android:text="Паразитологи"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonTer" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dantistsButton"
            android:layout_width="400dp"
            android:layout_height="57dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:background="#B39BC8"
            android:padding="10dp"
            android:text="Стоматологи"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonPar" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCanc"
            android:layout_width="400dp"
            android:layout_height="57dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:background="#B39BC8"
            android:padding="10dp"
            android:text="Онкологи"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dantistsButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/doctorsBack"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="#E5C390"
        android:padding="10dp"
        android:text="Назад"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>